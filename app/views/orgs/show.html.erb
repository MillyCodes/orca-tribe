<%#  Single opportunity page %>
<%#  Using @org here %>


	<div class="card">
		<div class="card-body">
		  <div class="row">
		      
		        <div class="card-header w-100"><%= @org.name%></div>
            <div class="card-body">
              <h5 class="card-title"><%= @org.name%></h5>
              <p class="card-text">
                <%= link_to like_org_path(@org), method: :put do %>
                  Upvotes
                  <%= @org.get_upvotes.size %>
                <% end %>
                <%= link_to dislike_org_path(@org), method: :put do %>
                  Downvote
                  <%= @org.get_downvotes.size %>
                <% end %>
              </p>
              <p class="card-text">Mission Statement : <%= @org.summary %></p>
              <p class="card-text">Address : <%= @org.address %></p>
              <p class="card-text">Website : <a href ='<%= @org.website %>'><%= @org.website %></a></p>
            </div>
          </div>
		  

  </div>
</div>
<hr>


<h3>Current Opportunities</h3>



      <div class="row">
      <% @org_opps.each do |item| %>
                      <div class="col-md-6">
                        <div class="card bg-light mb-3">
                                <div class="card-header"><%= item.title %></div>
                                <div class="card-body">
                                  <h5 class="card-title"><%= item.start_date.strftime("%B %d, %Y") %> - <%= item.end_date.strftime("%B %d, %Y") %></h5>
                                  <p class="card-text"><%= item.summary %> </a> </p>
                                  <p> <%= item.id %> </p>   

                                </div>
                              </div>
                      </div>
                      
  <% end %>
