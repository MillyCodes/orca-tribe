<div id="blogpost-table">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orgs.each do |org| %>
        <tr>
          <td><%= org.name %></td>
          <td><%= org.summary %></td>
          <td><%= link_to 'Show', org %></td>
          <td><%= link_to 'Edit', edit_org_path(org) %></td>
          <td><%= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div id="search-results">
  <% if @orgs.blank? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
  <% end %>
</div>
